{
    "manifest_version": 3,
    "name": "Globalize Temu",
    "version": "1.3",
    "description": "Temu'daki 'Yerel' etiketli ürünleri gizler. (Hides 'Local' labeled products on Temu.)",
    "permissions": [
        "storage",
        "tabs"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.temu.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ]
}